<p id="notice"><%= notice %></p>

<h1>Managers</h1>

<!-- Inserir opções de criação, edição e remoção de filmes, colaboradores, usários, entre outros... -->
<a href="/movies">
  <button type="button" class="btn btn-outline-success my-2 my-sm-0">
    Voltar para filmes
  </button>
</a>
<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Email</th>
      <th>Password</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @managers.each do |manager| %>
      <tr>
        <td><%= manager.code %></td>
        <td><%= manager.name %></td>
        <td><%= manager.email %></td>
        <td><%= manager.password %></td>
        <td><%= link_to 'Show', manager %></td>
        <td><%= link_to 'Edit', edit_manager_path(manager) %></td>
        <td><%= link_to 'Destroy', manager, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

