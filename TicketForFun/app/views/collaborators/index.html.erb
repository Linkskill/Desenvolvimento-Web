<%= render '/layouts/navbar' %>
<div class="container">
  <!-- Inserir opções de criação, edição e remoção de filmes -->
  <br><h1>Movies</h1>
  <br>
  <table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Gender</th>
      <th>Synopsis</th>
      <th>Director</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% Movie.all.each do |movie| %>
      <tr>
        <td><%= image_tag movie.avatar.url(:thumb) %></td>
        <td><%= movie.name %></td>
        <td><%= movie.gender %></td>
        <td><%= movie.synopsis %></td>
        <td><%= movie.director %></td>
        <td><%= link_to 'Show', movie %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
  <br>
  <%= link_to 'New Movie', new_movie_path %>
  <br>
  <h1>Users</h1>
  <br>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Username</th>
        <th>Email</th>
        <th>Password</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% User.all.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.username %></td>
          <td><%= user.email %></td>
          <td><%= user.password %></td>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
</div>