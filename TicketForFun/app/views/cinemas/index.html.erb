<p id="notice"><%= notice %></p>

<h1>Cinemas</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cinemas.each do |cinema| %>
      
      <li> <%= cinema.name%> 

      
        <%= link_to 'Show', cinema %>
        <%= link_to 'Edit', edit_cinema_path(cinema) %>
        <%= link_to 'Destroy', cinema, method: :delete, data: { confirm: 'Are you sure?' } %>
      </li>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cinema', new_cinema_path %>
