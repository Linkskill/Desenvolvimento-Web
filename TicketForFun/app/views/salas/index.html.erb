<p id="notice"><%= notice %></p>

<h1>Salas</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @salas.each do |sala| %>
        <li>
          <b> Nome:</b> <%= sala.name %> 
          <%= link_to 'Show', sala %>
          <%= link_to 'Edit', edit_sala_path(sala) %>
          <%= link_to 'Destroy', sala, method: :delete, data: { confirm: 'Are you sure?' } %>
          </li>
    <% end %>
  </tbody>
</table>

